{
  "manifest_version": 3,
  "name": "X Button Hider",
  "version": "1.4.6",
  "description": "Xの不要な要素を非表示：ナビボタン、@username、時間表示、Premium勧誘、検索ボックス等",
  "permissions": [],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "css": ["content.css"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "X Button Hider - Lists、Bookmarks、Moreボタンを非表示にしています"
  }
}